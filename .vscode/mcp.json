{
  "servers": {
    // Development: Uses uv for fast package management
    "mcp-python-starter": {
      "type": "stdio",
      "command": "uv",
      "args": ["run", "mcp-python-starter", "--stdio"],
      "env": {}
    }
    // Alternative: Use mcp dev command for inspector UI:
    // Run in terminal: uv run mcp dev mcp_starter/server.py
    
    // Production: Install package and use:
    // "command": "mcp-python-starter", "args": ["--stdio"]
    
    // HTTP transport: Run server in terminal, then:
    // "mcp-python-starter-http": {
    //   "type": "http",
    //   "url": "http://localhost:3000/mcp"
    // }
  }
}
